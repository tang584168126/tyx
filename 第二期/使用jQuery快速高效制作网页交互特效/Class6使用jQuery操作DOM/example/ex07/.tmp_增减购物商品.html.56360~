			$(document).ready(function(){
				//创建新节点
				var $newPro = 
				"<tr>"
				+ "<td>"
					+ "<input name='' type='checkbox' value='' />"
				+ "</td>"
				+ "<td>"
					+ "<img src='computer.jpg'  class='products' />"
