					+ "<img src='add.gif' width='20' height='20' />"
				+ "</td>"
				+ "<td><a href='#' class='del'>删除</a></td>"
				+ "</tr>"
				//删除
				$(".del").live("click",function(){
					$(this).parent().parent().remove();
				});
				
				//添加
			$(".add").click(function(){
				//在table中插入新建节点
				$("table").append($newPro);
				$newPro.appendTo("table");
			});
			});
			
		</script>
