    <script type="text/javascript">
        function getUser(loginId) {
            if (loginId != "") {
                var url = "AjaxService/GetUser.ashx?loginId=" + loginId;
                var xhr = createXMLHttpRequest();
                xhr.onreadystatechange = function () {
                    //接收Json数据，然后做相应处理
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        //var dom = xhr.responseXML;
                        //document.getElementById("name").innerHTML = dom.getElementsByTagName("Name")[0].childNodes[0].nodeValue;
                        //document.getElementById("mail").innerHTML = dom.getElementsByTagName("Mail")[0].childNodes[0].nodeValue;
                        //document.getElementById("address").innerHTML = dom.getElementsByTagName("Address")[0].childNodes[0].nodeValue;
                        //document.getElementById("phone").innerHTML = dom.getElementsByTagName("Phone")[0].childNodes[0].nodeValue;
                        //将JSON格式的字符串数据转换为JavaScript对象
                        var data = undefined;
                        if (window.JSON) {
                            data = JSON.parse(xhr.responseText);
                        } else {
                            data = eval("(" + xhr.responseText + ")");
                        }
                        
                        document.getElementById("name").innerHTML = data.Name;
                        document.getElementById("mail").innerHTML = data.Mail;
                        document.getElementById("address").innerHTML = data.Address;
                        document.getElementById("phone").innerHTML = data.Phone;

                        document.getElementById("userInfo").style.display = "";
                    }
                }

                xhr.open("GET", url, true);
                xhr.send(null);
            }
            
        }
        //创建Ajax原生对象
        function createXMLHttpRequest() {
            if (window.ActiveXObject) {  //IE5、IE6
                return new ActiveXObject("Microsoft.XMLHTTP");
            } else if (window.XMLHttpRequest) {  //其它浏览器
                return new XMLHttpRequest();
            }
        }

        function closeUser() {
            document.getElementById("userInfo").style.display="";
        }
    </script>
