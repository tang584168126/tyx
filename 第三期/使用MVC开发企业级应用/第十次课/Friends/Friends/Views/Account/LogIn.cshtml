@model Friends.Model.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录页面</title>
    <link href="@Href("~/Content/common.css")" rel="stylesheet" type="text/css" />
    <script src=@Href("~/Scripts/jquery-1.8.2.min.js")></script>
    <script src=@Href("~/Scripts/jquery.validate.min.js")></script>
    <script src=@Href("~/Scripts/jquery.validate.unobtrusive.min.js")></script>
</head>
<body class="loginBg">
    <div id="login">
        <div class="loginL">
            <img src="@Href("~/Images/bird-01.jpg")" width="222" height="107" />
            @*<form action="" method="post" name="myform">*@
            @using(@Html.BeginForm())
            {
                <ul>
                    <li>@Html.ValidationMessageFor(m=>m.Mail)</li>
                    <li>@Html.ValidationMessageFor(m=>m.Password)</li>
                    <li>@Html.ValidationSummary(true)</li>
                    <li>
                        @*<input name="username" type="text" value="邮箱/手机号/用户名" class="userInput" />*@
                        @Html.TextBoxFor(m => m.Mail, new { @class = "userInput" ,placeholder="请输入邮箱"})

                    </li>
                    <li>
                        @*<input name="key" type="text" value="请输入密码" class="keyInput" />*@
                        @Html.PasswordFor(m => m.Password, new { @class = "keyInput", placeholder = "请输入密码" })
                    </li>
                    <li>
                        <input name="autoLogin" type="checkbox" value="" />
                        下次自动登录 <span><a href="#">忘记密码？</a></span>
                    </li>
                    <li>
                        <input name="submitBtn" type="image" src="@Href("~/Images/bg-03.jpg")" value=" " />
                    </li>
                    <li>
                        <hr />
                    </li>
                    <li>
                        <a href="#"><img src="@Href("~/Images/bg-04.jpg")" width="190" height="38" /></a>
                    </li>
                </ul>
            @*</form>*@
            }
        </div>
        <div class="loginR">
            <dl class="top">
                <dt><img src="@Href("~/Images/bird-04.jpg")" width="310" height="33" /></dt>
                <dd>还没有青鸟朋友网账号，<a href="#">注册</a></dd>
            </dl>
            <dl class="textImg">
                <dt><img src="@Href("~/Images/bird-03.jpg")" width="139" height="43" /></dt>
                <dd>
                    是一个社交网络，通过它您可以与朋友、同学、同事、家人保持更紧密的联系，
                    及时了解他们的动态；与他分享你的生活和快乐。
                </dd>
            </dl>
        </div>
    </div>
</body>
</html>
