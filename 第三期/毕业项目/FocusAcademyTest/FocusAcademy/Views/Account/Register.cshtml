@model FocusAcademy.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册页面</title>
    <script src=@Href("~/Scripts/jquery-1.8.2.min.js")></script>
    <script src=@Href("~/Scripts/jquery.validate.min.js")></script>
    <script src=@Href("~/Scripts/jquery.validate.unobtrusive.min.js")></script>
</head>
<body>
    <div>
        @using(Html.BeginForm())
        {
            <label>用户名：</label>@Html.TextBoxFor(m => m.LoginId, new { @class = ""})
            @Html.ValidationMessageFor(m=>m.LoginId) <br/>
            
            <label>密码：</label>@Html.TextBoxFor(m => m.Password, new { @class = ""})
            @Html.ValidationMessageFor(m=>m.Password) <br/>
            
            <label>重复密码：</label>@Html.TextBoxFor(m => m.PasswordConfirm, new { @class = ""})
            @Html.ValidationMessageFor(m=>m.PasswordConfirm) <br/>
            
            <label>昵称：</label>@Html.TextBoxFor(m => m.NickName, new { @class = ""})
            @Html.ValidationMessageFor(m=>m.NickName) <br/>
            
            <label>邮箱：</label>@Html.TextBoxFor(m => m.Email, new { @class = ""})
            @Html.ValidationMessageFor(m=>m.Email) <br/>
            
            <label>验证码：</label>@Html.TextBoxFor(m => m.SecurityCode, new { @class = ""})
            
            <p><img id="validateCode" src=@Url.Action("SecurityCode") width="109" height="40" /> <br />
            <a href="#" onclick="document.getElementById('validateCode').src = document.getElementById('validateCode').src + '?'">看不清换一张</a></p>
            @Html.ValidationMessageFor(m=>m.SecurityCode) <br/>
            <input type="submit" name="btnSubmit" value="注册" />
            <input name="btnReset" class="btnReset" type="reset" value="清空" />
        }
    </div>
</body>
<script>
    $(function () {
        $(".btnReset").click(function () {
            @Html.TextBoxFor(m => m.LoginId, new { TProperty = "" })
            @Html.TextBoxFor(m => m.Password, new { TProperty = "" })
            @Html.TextBoxFor(m => m.PasswordConfirm, new { TProperty = "" })
            @Html.TextBoxFor(m => m.NickName, new { TProperty = "" })
            @Html.TextBoxFor(m => m.Email, new { TProperty = "" })
            @Html.TextBoxFor(m => m.SecurityCode, new { TProperty = "" })
        });
    });
    
</script>
</html>
