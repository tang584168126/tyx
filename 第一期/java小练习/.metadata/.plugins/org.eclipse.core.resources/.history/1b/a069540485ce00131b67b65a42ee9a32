import java.util.*;
public class Console5{
	public static void main(System[] args){
		
		System.out.println("\n\t\t 欢迎使用我行我素购物管理系统1.0版 \n");
		System.out.println("\t\t\t 1. 登陆系统 \n");
		System.out.println("\t\t\t 2. 退出 \n");
		System.out.println("* * * * * * * * * * * * * * * *\n");
		System.out.println("请选择，输入数字：");
		
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		switch (num)
		{
		case 1:
			System.out.println("\n\t\t 欢迎使用我行我素购物管理系统 \n");
			System.out.println("* * * * * * * * * * * * * * * *\n");
			System.out.println("\t\t\t\t 1. 客户信息管理 \n");
			System.out.println("\t\t\t 2. 购物结算 \n");
			System.out.println("\t\t\t 3. 真情回馈 \n");
			System.out.println("\t\t\t 4. 注销 \n");
			System.out.println("* * * * * * * * * * * * * * * *\n");
			System.out.println("请选择，输入数字：");
			break;
			
		case 2:
			System.out.println("谢谢您的使用！");
			break;
			
			default:
				System.out.println("输入错误。");
				break;
		}
	}
}