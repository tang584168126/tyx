import java.util.Scanner;


public class Console5 {
	public static void main(String[] args){
		
		int a ;
		Scanner sc = new Scanner(System.in);
		while(true )
		{
			
			
			if(! sc.hasNextInt())
			{
				System.out.println("输入错误");
				System.exit(1);
			}else{
				System.out.println("请输入a的值：" );
				a = sc.nextInt();
			}
			
		}
	}
}
