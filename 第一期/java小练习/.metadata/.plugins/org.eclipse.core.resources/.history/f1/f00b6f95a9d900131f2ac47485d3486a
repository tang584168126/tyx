import java.util.Scanner;


public class Test_4 {
	public static void main(String[] args){
		
		int num = 0;
		int score = 0 ,count  = 0 ;
		String isOK;
		double rate = 0;
		int random ;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("欢迎进入青鸟游戏平台\n");
		System.out.println("请选择您喜爱的游戏\n");
		System.out.println("************************************\n");
		System.out.println("\n1.斗地主");
		System.out.println("\n2.斗牛");
		System.out.println("\n3.泡泡龙");
		System.out.println("\n4.连连看");
		System.out.println("************************************\n");
		System.out.println("请选择，输入数字：");
		num = sc.nextInt();
				
		
		switch(num){
		case 1:
			System.out.println("您已进入斗地主房间！\n");
			
			do{
				random = (int)(Math.random() * 9 + 1);
				System.out.println("您正在玩第" + (num) + "局，成绩为：" + (random * 10));
				
				num++;
				if(score >= 80)
				{
					count++;
				}
				if(num == 5)
				{
					System.out.println("游戏结束");
					break;
				}
				System.out.println("继续玩下一局吗？（Y/N）");
				isOK = sc.next();
				if(isOK.equalsIgnoreCase("Y"))
				{
					System.out.println("进入下一局");
				}
				else{
					System.out.println("您已中途退出游戏");
					
					break;
					
				}
				
			}while(num < 5);
			rate = count / 5;
			if(rate >= 0.8)
			{
				System.out.println("恭喜！通过一级");
			}else if(rate >= 0.6 )
			{
				System.out.println("恭喜！通过二级");
			}else{
				System.out.println("对不起，您未能晋级，继续加油啊！");
			}
			break;
		case 2:
			System.out.println("您已进入斗牛房间！");

			do{
				random = (int)(Math.random() * 9 + 1);
