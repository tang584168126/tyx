				{
					System.out.println("进入下一局");
				}
				else{
					System.out.println("您已中途退出游戏");
					
					break;
					
				}
				
			}while(num < 5);
			rate = count / 5;
			if(rate >= 0.8)
			{
				System.out.println("恭喜！通过一级");
			}else if(rate >= 0.6 )
			{
				System.out.println("恭喜！通过二级");
			}else{
				System.out.println("对不起，您未能晋级，继续加油啊！");
			}
			break;
		case 3:
			System.out.println("您已进入泡泡龙房间！");

			do{
				random = (int)(Math.random() * 9 + 1);
				System.out.println("您正在玩第" + (num) + "局，成绩为：");
				
				num++;
				if(score >= 80)
				{
					count++;
				}
				if(num == 5)
				{
					System.out.println("游戏结束");
					break;
				}
				System.out.println("继续玩下一局吗？（Y/N）");
				isOK = sc.next();
				if(isOK.equalsIgnoreCase("Y"))
				{
					System.out.println("进入下一局");
				}
				else{
					System.out.println("您已中途退出游戏");
					
					break;
					
				}
				
			}while(num < 5);
			rate = count / 5;
			if(rate >= 0.8)
			{
				System.out.println("恭喜！通过一级");
			}else if(rate >= 0.6 )
			{
				System.out.println("恭喜！通过二级");
			}else{
				System.out.println("对不起，您未能晋级，继续加油啊！");
			}
			break;
		case 4:
			System.out.println("您已进入连连看房间！");

			do{
				random = (int)(Math.random() * 9 + 1);
				System.out.println("您正在玩第" + (num) + "局，成绩为：");
				
				num++;
				if(score >= 80)
				{
					count++;
				}
				if(num == 5)
				{
					System.out.println("游戏结束");
					break;
				}
				System.out.println("继续玩下一局吗？（Y/N）");
				isOK = sc.next();
				if(isOK.equalsIgnoreCase("Y"))
				{
					System.out.println("进入下一局");
				}
				else{
					System.out.println("您已中途退出游戏");
					
					break;
					
				}
				
			}while(num < 5);
			rate = count / 5;
			if(rate >= 0.8)
			{
				System.out.println("恭喜！通过一级");
			}else if(rate >= 0.6 )
			{
				System.out.println("恭喜！通过二级");
			}else{
				System.out.println("对不起，您未能晋级，继续加油啊！");
			}
