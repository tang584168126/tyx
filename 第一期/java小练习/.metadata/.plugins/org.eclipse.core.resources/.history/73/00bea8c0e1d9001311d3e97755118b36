package class7;

public class Test3 {
	public static void main(String[] args){
		int i = 0;
		int sum = 0;
		int a = 0; //数字
		for(i = 1 ; i <= 100; i++){
			if(i % 7 == 0){
				continue;
			}
			else{
				System.out.print(i + "\t");
				a++;
				if(a % 4 == 0)
				{
					System.out.println();
				}
				
			}
			sum += i;
		}
		System.out.println("数据之和：" + sum);
	}

}
