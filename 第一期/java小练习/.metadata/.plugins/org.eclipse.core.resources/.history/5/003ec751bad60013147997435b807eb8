package class5;

import java.util.Scanner;

public class Test4 {
	public static void main(String[] args){
		 
		int i = 0;
		int max = 0 , min = 0 ;
		
		Scanner sc = new Scanner(System.in);
		
		do{
			System.out.print("请输入一个整数（输入0结束）：");
			i = sc.nextInt();
			if(i != 0){
				if(i > max )
				{
					max = i;
					min = i;
					if(i <min)
					{
						min = i;
					}
				
				}
				if(i < max)
				{
					max = i;
					min = i ;
					if(i < min)
					{
						min = i ;
					}
					
				
					
				}
			}else
			{
				break;
			}
		}while(true);
		System.out.println("最大值是：" + max);
		System.out.println("最小值是：" + min);
	}

}
